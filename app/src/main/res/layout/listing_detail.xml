<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--<RelativeLayout android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent">-->
        <!--<ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"/>-->


    <!--</RelativeLayout>-->
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/listing_details"
            android:src="@drawable/ic_action_about"
            android:layout_below="@+id/marker_icon1"/>
        <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/call_agent"
            android:src="@drawable/ic_action_call"
            android:layout_below="@+id/marker_icon1"
            android:layout_toRightOf="@+id/listing_details"/>
        <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/interested"
            android:src="@drawable/ic_action_good"
            android:layout_below="@id/marker_icon1"
            android:layout_toRightOf="@id/call_agent"/>
        <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/chat"
            android:src="@drawable/ic_action_chat"
            android:layout_below="@+id/marker_icon1"
            android:layout_toRightOf="@+id/interested"/>

    </LinearLayout>


</FrameLayout>