
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/container"
    android:orientation="vertical"
    tools:context=".MapsActivity"
    tools:ignore="MergeRootFrame">

    <fragment
        android:id="@+id/map"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_above="@+id/filter_btn"
        android:name="com.google.android.gms.maps.SupportMapFragment"/>

    <my.gmap.googlemapv2.lib.view.TransparentPanel
        android:id="@+id/property_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="left"
        android:padding="1px"

        android:layout_above="@id/filter_btn">
        <RelativeLayout android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
            <ImageView android:layout_width="150dp"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                android:id="@+id/marker_icon1"
                />
            <TextView android:id="@+id/property_title"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_toRightOf="@id/marker_icon1"/>
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/property_price"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_toRightOf="@id/marker_icon1"
                android:layout_below="@+id/property_title"/>
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bedroom"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_toRightOf="@id/marker_icon1"
                android:layout_below="@+id/property_price"/>
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bathrooms"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_toRightOf="@id/marker_icon1"
                android:layout_below="@+id/bedroom"/>
            <RelativeLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_below="@+id/marker_icon1">
                <at.markushi.ui.CircleButton
                    android:id = "@+id/like"
                    android:layout_width="64dip"
                    android:layout_height="64dip"
                    android:src="@drawable/ic_action_good"
                    app:cb_color="#99CC00"
                    app:cb_pressedRingWidth="8dip"
                    />

                <at.markushi.ui.CircleButton
                    android:id = "@+id/chatbtn"
                    android:layout_width="64dip"
                    android:layout_height="64dip"
                    android:src="@drawable/ic_action_chat"
                    app:cb_color="#0066FF"
                    app:cb_pressedRingWidth="8dip"
                    android:layout_toRightOf="@+id/like"

                    />
                </RelativeLayout>
        </RelativeLayout>
    </my.gmap.googlemapv2.lib.view.TransparentPanel>



    <Button
        android:id="@+id/filter_btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Filter"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:background="@drawable/custom_button"/>

    <my.gmap.googlemapv2.lib.view.TransparentPanel
        android:id="@+id/popup_window"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="left"

        android:layout_alignParentBottom="true"
        android:padding="1px">

    <RelativeLayout	xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#99CCFF"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="25dp"
        >
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/proptxt"
            android:text="Property Type: "
            android:textStyle="bold"
            />
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/property_type"
            android:spinnerMode="dropdown"
            android:entries="@array/property_type"
            android:layout_toRightOf="@id/proptxt"
            />
    </RelativeLayout>
        <Button android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/apply"
            android:text="Apply Filter"
            android:textColor="@android:color/white"
            android:background="@drawable/custom_button"
            android:layout_below="@+id/spinner"/>
    </my.gmap.googlemapv2.lib.view.TransparentPanel>


</RelativeLayout>
